{
  "name": "wae-graphics",
  "version": "1.0.0",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "include-nodecg postinstall",
    "dev": "include-nodecg start",
    "build:graphics": "parcel build src/graphics/*.html --dist-dir graphics --public-url ./",
    "watch:graphics": "parcel watch src/graphics/*.html --dist-dir graphics --public-url ./",
    "build:dashboard": "parcel build src/dashboard/panels/**/*.html --dist-dir dashboard --public-url ./",
    "watch:dashboard": "parcel watch src/dashboard/panels/**/*.html --dist-dir dashboard --public-url ./",
    "build": "concurrently 'pnpm:build:*'",
    "watch": "concurrently 'pnpm:watch:*'"
  },
  "dependencies": {
    "@preact/signals": "^1.1.2",
    "include-nodecg": "^0.0.3",
    "nodecg": "^1.9.0",
    "preact": "^10.11.0"
  },
  "devDependencies": {
    "concurrently": "^7.4.0",
    "parcel": "^2.7.0",
    "postcss": "^8.4.17",
    "tailwindcss": "^3.1.8"
  },
  "browserslist": "chrome 103",
  "nodecg": {
    "compatibleRange": ">=0.9",
    "dashboardPanels": [
      {
        "name": "schedule",
        "title": "Schedule",
        "width": 3,
        "file": "schedule.html"
      },
      {
        "name": "toasts",
        "title": "Toasts",
        "width": 4,
        "file": "toasts.html"
      },
      {
        "name": "clock",
        "title": "Clock",
        "width": 2,
        "file": "clock.html"
      }
    ]
  }
}
