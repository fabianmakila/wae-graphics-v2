{
  "name": "wae-stream-bundle",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "include-nodecg postinstall",
    "dev": "include-nodecg start",
    "build": "parcel build",
    "watch": "parcel watch",
    "schema-types": "nodecg schema-types"
  },
  "dependencies": {
    "destyle.css": "^4.0.0",
    "include-nodecg": "^0.0.3",
    "nodecg": "^1.9.0",
    "nodecg-cli": "^8.3.0",
    "tsparticles": "^2.6.0",
    "tsparticles-engine": "^2.6.0",
    "tsparticles-plugin-emitters": "^2.6.0"
  },
  "devDependencies": {
    "@parcel/config-default": "^2.8.1",
    "@parcel/transformer-pug": "^2.8.1",
    "concurrently": "^7.6.0",
    "parcel": "^2.8.1",
    "parcel-reporter-multiple-static-file-copier": "^1.0.5",
    "postcss": "^8.4.19",
    "tailwindcss": "^3.2.4"
  },
  "browserslist": "chrome 103",
  "targets": {
    "dashboard": {
      "source": [
        "src/dashboard/clock.pug",
        "src/dashboard/schedule.pug",
        "src/dashboard/toasts.pug",
        "src/dashboard/widget.pug"
      ],
      "distDir": "wae-stream-bundle/dashboard",
      "publicUrl": "./"
    },
    "graphics": {
      "source": [
        "src/graphics/intermission.pug",
        "src/graphics/schedule.pug",
        "src/graphics/toasts.pug",
        "src/graphics/widget.pug"
      ],
      "distDir": "wae-stream-bundle/graphics",
      "publicUrl": "./"
    }
  },
  "multipleStaticFileCopier": [
    {
      "origin": "static",
      "destination": "wae-stream-bundle"
    }
  ]
}
