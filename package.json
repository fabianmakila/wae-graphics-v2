{
  "name": "wae-stream-bundle",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "include-nodecg postinstall",
    "dev": "include-nodecg start",
    "build:graphics": "parcel build src/graphics/*.pug --dist-dir graphics --public-url ./",
    "watch:graphics": "parcel watch src/graphics/*.pug --dist-dir graphics --public-url ./",
    "build:dashboard": "parcel build src/dashboard/*.pug --dist-dir dashboard --public-url ./",
    "watch:dashboard": "parcel watch src/dashboard/*.pug --dist-dir dashboard --public-url ./",
    "build": "concurrently 'pnpm:build:*'",
    "watch": "concurrently 'pnpm:watch:*'",
    "schema-types": "nodecg schema-types"
  },
  "dependencies": {
    "destyle.css": "^4.0.0",
    "include-nodecg": "^0.0.3",
    "nodecg": "^1.9.0",
    "nodecg-cli": "^8.3.0",
    "tsparticles": "^2.6.0",
    "tsparticles-engine": "^2.6.0",
    "tsparticles-plugin-emitters": "^2.6.0"
  },
  "devDependencies": {
    "@parcel/transformer-pug": "^2.8.1",
    "concurrently": "^7.6.0",
    "parcel": "^2.8.1",
    "postcss": "^8.4.19",
    "tailwindcss": "^3.2.4"
  },
  "browserslist": "chrome 103",
  "nodecg": {
    "compatibleRange": ">=1.9.0",
    "assetCategories": [
      {
        "name": "intermission-logos",
        "title": "Intermission Images",
        "allowedTypes": ["png", "jpg", "jpeg", "svg", "webp"]
      }
    ],
    "dashboardPanels": [
      {
        "name": "toasts",
        "title": "Toasts",
        "width": 4,
        "file": "toasts.html"
      },
      {
        "name": "schedule",
        "title": "Schedule",
        "width": 4,
        "file": "schedule.html"
      },
      {
        "name": "clock",
        "title": "Clock",
        "width": 2,
        "file": "clock.html"
      },
      {
        "name": "widget",
        "title": "Widget",
        "width": 2,
        "file": "widget.html"
      }
    ],
    "graphics": [
      {
        "file": "schedule.html",
        "width": 1920,
        "height": 1080
      },
      {
        "file": "toasts.html",
        "width": 1920,
        "height": 1080
      },
      {
        "file": "intermission.html",
        "width": 1920,
        "height": 1080
      },
      {
        "file": "widget.html",
        "width": 1920,
        "height": 1080
      }
    ]
  }
}
